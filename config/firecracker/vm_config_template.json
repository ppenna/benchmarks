{
	"boot-source": {
		"kernel_image_path": "vmlinux.bin",
		"boot_args": "quiet loglevel=3 console=ttyS0 reboot=k panic=1 pci=off ip_with_mask={{guest_ip}}/24 route={{tap_ip}}",
		"initrd_path": null
	},
	"drives": [
		{
			"drive_id": "rootfs",
			"partuuid": null,
			"is_root_device": true,
			"cache_type": "Unsafe",
			"is_read_only": false,
			"path_on_host": "rootfs.ext4",
			"io_engine": "Sync",
			"rate_limiter": null,
			"socket": null
		}
	],
	"machine-config": {
		"vcpu_count": 1,
		"mem_size_mib": 128,
		"smt": false,
		"track_dirty_pages": false,
		"huge_pages": "None"
	},
	"cpu-config": null,
	"balloon": null,
	"network-interfaces": [
	{
			"iface_id": "eth0",
			"host_dev_name": "{{tap_id}}",
			"guest_mac": "{{mac_address}}"
		}
	],
	"vsock": null,
	"logger": {
		"log_path": "{{firecracker_log_location}}",
		"level": "Info",
		"show_level": true,
		"show_log_origin": false
	},
	"metrics": null,
	"mmds-config": null,
	"entropy": null
}